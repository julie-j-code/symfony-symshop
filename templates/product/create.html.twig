{% extends "base.html.twig" %}
{% form_theme formView 'bootstrap_4_layout.html.twig' %}
{% block title %}New Product Creation !{% endblock %}
{% block body %}
<h1>Nouveau produit</h1>

    {{ form_start(formView) }}

        <div class="row">
            <div class="col">
                {{ form_row(formView.name)}}
                {{ form_row(formView.price)}}
            </div>
            <div class="col">
                {{ form_row(formView.mainPicture)}}
                {{ form_row(formView.category)}}
                {{ form_row(formView.shortDescription)}}
            </div>
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save mr-1"></i>
            Enregistrer le produit
        </button>


    {{ form_end(formView) }}
{% endblock %}